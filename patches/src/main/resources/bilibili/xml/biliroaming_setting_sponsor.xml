<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.preference.PreferenceCategory>
        <androidx.preference.Preference
            android:key="sb_enabled"
            android:summary="@string/biliroaming_sb_enabled_summary"
            android:title="@string/biliroaming_sb_enabled_title" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:key="sb_category_style"
        android:layout="@layout/bili_app_layout_preference_category_title"
        android:title="@string/biliroaming_sb_category_style_title">
        <androidx.preference.Preference
            android:key="sb_show_vote_button"
            android:summary="@string/biliroaming_sb_show_vote_button_summary"
            android:title="@string/biliroaming_sb_show_vote_button_title" />
        <androidx.preference.Preference
            android:key="sb_hide_skip_button"
            android:summary="@string/biliroaming_sb_hide_skip_button_summary"
            android:title="@string/biliroaming_sb_hide_skip_button_title" />
        <androidx.preference.Preference
            android:key="sb_auto_skip_notice"
            android:summary="@string/biliroaming_sb_auto_skip_notice_summary"
            android:title="@string/biliroaming_sb_auto_skip_notice_title" />
        <androidx.preference.Preference
            android:key="sb_length_without_segments"
            android:summary="@string/biliroaming_sb_length_without_segments_summary"
            android:title="@string/biliroaming_sb_length_without_segments_title" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory
        android:key="sb_category_about"
        android:layout="@layout/bili_app_layout_preference_category_title"
        android:title="@string/biliroaming_sb_category_about_title">
        <androidx.preference.Preference
            android:key="sb_about_url"
            android:summary="@string/biliroaming_sb_about_url_summary"
            android:title="@string/biliroaming_sb_about_url_title" />
    </androidx.preference.PreferenceCategory>