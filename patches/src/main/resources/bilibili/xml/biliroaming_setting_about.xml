<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.preference.PreferenceCategory>
        <androidx.preference.Preference
            android:key="version"
            android:title="@string/biliroaming_version_title" />
        <androidx.preference.Preference
            android:key="feedback"
            android:summary="@string/biliroaming_feedback_summary"
            android:title="@string/biliroaming_feedback_title" />
        <androidx.preference.Preference
            android:key="project_url"
            android:summary="@string/biliroaming_project_url"
            android:title="@string/biliroaming_project_title" />
        <androidx.preference.Preference
            android:key="tg_link"
            android:summary="@string/biliroaming_tg_url"
            android:title="@string/biliroaming_tg_title" />
        <androidx.preference.Preference
            android:key="fork_project_url"
            android:summary="@string/biliroaming_fork_project_url"
            android:title="@string/biliroaming_fork_project_title" />
        <androidx.preference.Preference
            android:key="fork_tg_link"
            android:summary="@string/biliroaming_fork_tg_url"
            android:title="@string/biliroaming_fork_tg_title" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory>
        <androidx.preference.Preference
            android:key="report"
            android:summary="@string/biliroaming_report_summary"
            android:title="@string/biliroaming_report_title" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory>
        <androidx.preference.SwitchPreferenceCompat
            android:key="enable_new_feature"
            android:summary="@string/biliroaming_enable_new_feature_summary"
            android:title="@string/biliroaming_enable_new_feature_title" />
        <androidx.preference.SwitchPreferenceCompat
            android:key="debug"
            android:title="@string/biliroaming_debug_title" />
        <androidx.preference.Preference
            android:key="share_log"
            android:summary="@string/biliroaming_share_log_summary"
            android:title="@string/biliroaming_share_log_title" />
    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>
